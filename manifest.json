
{
  "manifest_version": 3,
  "name": "Auxiliar de Frequência do SIGAA",
  "version": "2.0",
  "description": "Adiciona botões e controle de voz à planilha de frequência do SIGAA.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://si3.ufc.br/sigaa/ava/FrequenciaAluno/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}